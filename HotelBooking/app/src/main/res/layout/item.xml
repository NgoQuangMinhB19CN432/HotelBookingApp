<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/hotel_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/hera"
            />
        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hotel_img"
            android:text="Hera Boutique Hotel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/hotel_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hotel_img"
            android:text="Da Lat, Viet Nam"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/hotel_img"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="550.000"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/hotel_img"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hotel_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-40%"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:layout_toRightOf="@id/hotel_img"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="170dp"
            android:textSize="15dp"
            />
        
    </RelativeLayout>
</androidx.cardview.widget.CardView>